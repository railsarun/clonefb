  <table>
   <thead>
     <tr>
      <th>Date-Time</th>
      <th>Name</th>
      <th>Title</th>
      <th>Description</th>
      <th>Age</th>
      <th>Address</th>
      <th>Image</th>
      <th colspan="6"></th>
     </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.update_at %></td>
        <td><%= post.name %></td>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= post.age %></td>
        <td><%= post.address %></td>
        <td><%= image_tag post.image ,:size => '160x100'%></td>
        <td>
                <%# <%like=current_user.likes.find_by(post: post)%>
                <p><%= post.likes.count %>Likes</p>
